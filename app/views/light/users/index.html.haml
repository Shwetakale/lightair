%table.table.table-striped 
  %tr
    %td
      %strong 
        = "#"
    %td
      %strong
        User's Email Id 
    %td
      %strong
        Username
    %td{colspan: 2}
      %center
        %strong
          Edit
  -count = 0
  - @users.each do |user|
    -if user.is_subscribed == true
      -str = :success
    -else
      -str = :warning
    -count = count + 1
    %tr{:class => str}
      %td
        =count
      %td
        = link_to user.email_id, user_path(user)
      %td
        = user.username
      %td
        = link_to "Edit", edit_user_path(user), class: "btn btn-mini btn-success"
      %td
        = link_to "Delete", user_path(user), method: :delete, class: "btn btn-mini btn-danger"
